<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradiant_bg">

    <!-- Scrollable content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EVENT"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date: 20th July 2025\nLocation: Sarasbaug, Pune"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Join us for a day of action and impact as we come together to clean our community spaces. This event is aimed at raising awareness about environmental cleanliness and encouraging collective responsibility. Volunteers will help clean parks, plant trees, and spread awareness through posters and interactive sessions with locals. Snacks and certificates will be provided to all participants."
                android:textSize="16sp"
                android:textColor="@color/white"
                android:layout_marginTop="16dp" />
        </LinearLayout>
    </ScrollView>

    <!-- Fixed footer -->
    <include
        layout="@layout/footernav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
